BEGIN:VCALENDAR
METHOD:PUBLISH
VERSION:2.0
PRODID:http://thebigtrip.toliveistofly.com
X-WR-CALNAME:BT Flights
CALSCALE:GERGORIAN
<% @events.each do |event| %>
BEGIN:VEVENT
UID:<%= event.id %>
DTSTAMP;TZID=US/Central:<%= Time.now.strftime("%Y%m%dT%H%M%S") %>
DTSTART;TZID=Europe/London:<%= event.start.strftime("%Y%m%dT%H%M%S") %>
DTEND;TZID=Europe/London:<%= event.end.strftime("%Y%m%dT%H%M%S") %>
SUMMARY:<%= event.title %>
LOCATION:<%= event.location %>
DESCRIPTION: <%= event.description %>. More Info: http://thebigtrip.toliveistofly.com/events/<%= event.id %>
END:VEVENT
<% end %>
END:VCALENDAR