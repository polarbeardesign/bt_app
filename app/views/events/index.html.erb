<h1>Calendars</h1>

<table class="time-table">
  <tr>
    <th>Start</th>
    <th>End</th>
    <th>Event Type</th>
    <th>Title</th>
    <th>Location</th>
    <th>Description</th>
  </tr>

<% @events.each do |event| %>
  <tr class="<%= cycle('row_1', 'row_2') %>">
    <td><%= event.start.strftime("%b %d, %H:%M") %></td>
    <td><%= event.end.strftime("%b %d, %H:%M") %></td>
    <td><%= event.event_type %></td>
    <td><%= link_to event.title, event %></td>
    <td><%= event.location %></td>
    <td><%= event.description %></td>
  </tr>
<% end %>
</table>

